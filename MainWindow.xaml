<Window x:Class="Student_Attendance_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Attendance System" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="10,8">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D4E60"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F8FAFC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="SidebarBorder" Grid.Column="0" Width="260" Background="#2C3E50">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Grid Margin=" 0,0,0,10">
                        <Button x:Name="btnHamburger" Content="≡" FontSize="32" Foreground="White" FontWeight="DemiBold" 
                          Style="{StaticResource MenuButtonStyle}" BorderThickness="0" HorizontalAlignment="Right" Click="btnHamburger_Click" Margin="15,5,0,10"/>

                        
                    </Grid>
                    <StackPanel x:Name="SideInfoPanel">
                        <Border Background="#34495E" CornerRadius="5" Padding="5" Margin="0,0,0,10">
                            <TextBlock x:Name="txtDate" Foreground="#ECF0F1" FontSize="15" HorizontalAlignment="Center"/>
                        </Border>
                        <Border x:Name="btnHomeLogo_Clic">
                        <Image Source="/Assets/Owl.png" Height="45" Margin="0,5"/>
                        </Border>
                        <TextBlock x:Name="txtWelcome" Text="WELCOME" Foreground="White" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    </StackPanel>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                    <StackPanel x:Name="MenuStack">
                        <Button Style="{StaticResource MenuButtonStyle}" Click="btnLanguage_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="🌐" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lblLang" Text="Language: ENG / JP" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Button>

                        <Button x:Name="btnLoginMenu" Style="{StaticResource MenuButtonStyle}" Click="btnLoginMenu_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="🔑" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lblLogin" Text="Login" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Button>

                        <Button x:Name="btnRegister" Style="{StaticResource MenuButtonStyle}" Click="btnRegister_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="📝" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lblReg" Text="Register" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Button>

                        <Button x:Name="btnScanMode" Style="{StaticResource MenuButtonStyle}" Click="btnScanMode_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="📷" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lblScan" Text="Scan / Webcam" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Button>

                        <Button x:Name="btnTimeTable" Style="{StaticResource MenuButtonStyle}" Click="btnTimeTable_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="📅" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lblTable" Text="Time Table" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Button>

                        <Button x:Name="btnReport" Style="{StaticResource MenuButtonStyle}" Click="btnReport_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="📊" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                <TextBlock x:Name="lblReport" 
                   Text="Report" 
                   Grid.Column="1" 
                   VerticalAlignment="Center" 
                   Margin="10,0,0,0"/>
                            </Grid>
                        </Button>

                        <Button x:Name="btnLogout" Visibility="Collapsed" Style="{StaticResource MenuButtonStyle}" Click="btnLogout_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="🚪" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lblLogout" Text="Logout" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" x:Name="BottomPanel">
                    <Separator Background="#30FFFFFF" Margin="0,5,0,10"/>
                    <Button Style="{StaticResource MenuButtonStyle}" Click="btnAbout_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ℹ️" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="lblAbout" Text="About Us" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource MenuButtonStyle}" Click="btnDevTeam_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="👨‍💻" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="lblDev" Text="Developer Team" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0"/>
        </Grid>
    </Grid>
</Window>
<Window x:Class="Student_Attendance_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Menu" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Student Attendance System" FontSize="30" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"/>

            <Button Content="Start Attendance Check (Camera)" Height="50" Width="300" Margin="10" 
                    Background="#4CAF50" Foreground="White" FontSize="16"
                    Click="btnOpenWebcam_Click"/>

            <Button Content="Register New Student" Height="50" Width="300" Margin="10" 
                    Background="#2196F3" Foreground="White" FontSize="16"
                    Click="btnOpenRegister_Click"/>

            <Button Content="Admin Dashboard" Height="50" Width="300" Margin="10" 
                    Background="#FF9800" Foreground="White" FontSize="16"
                    Click="btnOpenDashboard_Click"/>
        </StackPanel>
    </Grid>
</Window>
    
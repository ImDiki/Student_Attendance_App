<Window x:Class="Student_Attendance_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Attendance System" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="15,0">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Border Background="#34495E" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                        <TextBlock x:Name="txtDate" Text="Checking Date..." 
                                   Foreground="#ECF0F1" FontSize="14" FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <Image Source="/Assets/Owl.png" Height="80" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <TextBlock Text="WELCOME" Foreground="White" FontSize="22" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <Separator Background="Gray" Margin="0,0,0,20"/>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <Button x:Name="btnLanguage" Content="🌐 Language: ENG / JP" Height="45" Style="{StaticResource MenuButtonStyle}" Click="btnLanguage_Click"/>
                    <Button x:Name="btnLoginMenu" Content="🔑 Login" Height="45" Style="{StaticResource MenuButtonStyle}" Click="btnLoginMenu_Click"/>
                    <Button x:Name="btnRegister" Content="📝 Register" Height="45" Style="{StaticResource MenuButtonStyle}" Click="btnRegister_Click"/>
                    <Button x:Name="btnScanMode" Content="📷 Scan / Webcam" Height="45" Style="{StaticResource MenuButtonStyle}" Click="btnScanMode_Click"/>
                    <Button x:Name="btnTimeTable" Content="📅 Time Table" Height="45" Style="{StaticResource MenuButtonStyle}" Click="btnTimeTable_Click"/>
                    <Button x:Name="btnReport" Content="📊 Report" Height="45" Style="{StaticResource MenuButtonStyle}" Click="btnReport_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="2">
                    <Separator Background="Gray" Margin="0,20"/>
                    <Button x:Name="btnAbout" Content="ℹ️ About Us" Height="40" Background="Transparent" Foreground="LightGray" BorderThickness="0" HorizontalContentAlignment="Left" Click="btnAbout_Click"/>
                    <Button x:Name="btnDevTeam" Content="👨‍💻 Developer Team" Height="40" Background="Transparent" Foreground="LightGray" BorderThickness="0" HorizontalContentAlignment="Left" Click="btnDevTeam_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Background="#ECF0F1">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>

    </Grid>
</Window>
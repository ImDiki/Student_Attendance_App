<Window x:Class="Student_Attendance_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Attendance System" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12" Padding="10,8">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1AFFFFFF"/>
                                <Setter Property="Foreground" Value="#06B6D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E293B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="SidebarBorder" Grid.Column="0" Width="260" Margin="15" CornerRadius="20" 
                Background="#0DFFFFFF" BorderThickness="1" BorderBrush="#26FFFFFF">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Grid x:Name="HeaderGrid" Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnHomeLogo" Grid.Row="0" Grid.Column="0" Click="btnHomeLogo_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Button.Template>
                            <Image Source="/Assets/Owl.png" Height="45"/>
                        </Button>
                        <Button x:Name="btnHamburger" Grid.Row="0" Grid.Column="1" Content="≡" FontSize="28" 
                                Foreground="#06B6D4" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" 
                                Click="btnHamburger_Click" Width="45" Height="45"/>
                    </Grid>

                    <Border x:Name="ClockContainer" Background="#1AFFFFFF" CornerRadius="12" Padding="10" Margin="0,0,0,15" BorderBrush="#33FFFFFF" BorderThickness="1">
                        <StackPanel>
                            <TextBlock x:Name="txtDigitalClock" Text="00:00:00" Foreground="#06B6D4" 
                                       FontSize="45" HorizontalAlignment="Center" 
                                       FontFamily="./Assets/digital_7/#Digital-7">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#06B6D4" BlurRadius="20" ShadowDepth="0" Opacity="0.9"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock x:Name="txtDate" Foreground="White" FontSize="11" HorizontalAlignment="Center" Opacity="0.7" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <StackPanel x:Name="SideInfoPanel">
                        <TextBlock x:Name="txtWelcome" Text="WELCOME" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <Separator Background="#26FFFFFF" Margin="10,0,10,15"/>
                    </StackPanel>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                    <StackPanel x:Name="MenuStack">
                        <Button Style="{StaticResource MenuButtonStyle}" Click="btnLanguage_Click">
                            <Grid x:Name="pnlLang">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="🌐" FontSize="18" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="lblLang" Text="Language" Grid.Column="1" Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button x:Name="btnLoginMenu" Style="{StaticResource MenuButtonStyle}" Click="btnLoginMenu_Click">
                            <Grid x:Name="pnlLogin">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="🔑" FontSize="18" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="lblLogin" Text="Login" Grid.Column="1" Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button x:Name="btnRegister" Style="{StaticResource MenuButtonStyle}" Click="btnRegister_Click">
                            <Grid x:Name="pnlReg">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="📝" FontSize="18" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="lblReg" Text="Register" Grid.Column="1" Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button x:Name="btnScanMode" Style="{StaticResource MenuButtonStyle}" Click="btnScanMode_Click">
                            <Grid x:Name="pnlScan">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="📷" FontSize="18" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="lblScan" Text="Scan" Grid.Column="1" Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button x:Name="btnTimeTable" Style="{StaticResource MenuButtonStyle}" Click="btnTimeTable_Click">
                            <Grid x:Name="pnlTable">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="📅" FontSize="18" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="lblTable" Text="Timetable" Grid.Column="1" Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button x:Name="btnReport" Style="{StaticResource MenuButtonStyle}" Click="btnReport_Click">
                            <Grid x:Name="pnlReport">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="📊" FontSize="18" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="lblReport" Text="Report" Grid.Column="1" Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button x:Name="btnLogout" Visibility="Collapsed" Style="{StaticResource MenuButtonStyle}" Click="btnLogout_Click">
                            <Grid x:Name="pnlLogout">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="🚪" FontSize="18" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="lblLogout" Text="Logout" Grid.Column="1" Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" x:Name="BottomPanel">
                    <Separator Background="#26FFFFFF" Margin="10,5,10,10"/>
                    <Button Style="{StaticResource MenuButtonStyle}" Click="btnAbout_Click">
                        <Grid x:Name="pnlAbout">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ℹ️" FontSize="18" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="lblAbout" Text="About Us" Grid.Column="1" Margin="10,0,0,0"/>
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource MenuButtonStyle}" Click="btnDevTeam_Click">
                        <Grid x:Name="pnlDev">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="👨‍💻" FontSize="18" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="lblDev" Text="Developer" Grid.Column="1" Margin="10,0,0,0"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="btnGlobalBack" Grid.Row="0" HorizontalAlignment="Left" Margin="20,15,0,0"
                    Background="#1AFFFFFF" BorderBrush="#33FFFFFF" BorderThickness="1" Foreground="White" 
                    Content="← BACK" Width="90" Height="35" Visibility="Collapsed" Click="btnGlobalBack_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Margin="0" Navigated="MainFrame_Navigated"/>
        </Grid>
    </Grid>
</Window>
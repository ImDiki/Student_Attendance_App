<Window x:Class="Student_Attendance_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_Attendance_System"
        mc:Ignorable="d"
        Title="Student Attendance System" Height="600" Width="900" Background="#F0F0F0">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20" Background="White" Height="60">
            <Label Content="Select Camera:" VerticalAlignment="Center" Margin="10,0"/>

            <ComboBox x:Name="cboCamera" Width="250" Height="30" Margin="5" VerticalContentAlignment="Center"/>

            <Button x:Name="btnStart" Content="Start Camera" Width="120" Height="35" Margin="10,0" 
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="btnStart_Click"/>

            <Button x:Name="btnStop" Content="Stop" Width="80" Height="35" Margin="5,0" 
                    Background="#F44336" Foreground="White" FontWeight="Bold" Click="btnStop_Click"/>
        </StackPanel>

        <Border Grid.Row="1" Margin="20" BorderBrush="Gray" BorderThickness="1" Background="Black">
            <Grid>
                <Image x:Name="imgWebcam" Stretch="Uniform"/>

                <TextBlock x:Name="txtQRCode" VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                           FontSize="28" FontWeight="Bold" Foreground="#FFFF00" 
                           Background="#80000000" Padding="20,10" Margin="0,0,0,50" 
                           Text="Waiting for QR Code..."/>
            </Grid>
        </Border>
    </Grid>
</Window>
<Application x:Class="Student_Attendance_System.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">



    <Application.Resources>
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F4F6F9"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>
        <SolidColorBrush x:Key="TextBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="SubTextBrush" Color="Gray"/>

        <Style x:Key="TimetableCardStyle" TargetType="Button">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderBrush="#E2E8F0" BorderThickness="0.5" Background="{TemplateBinding Background}">
                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="{TemplateBinding Content}" 
                                       FontWeight="Bold" 
                                       FontSize="13" 
                                       TextWrapping="Wrap" 
                                       TextAlignment="Center"
                                       Foreground="#2D3748"/>
                                    <TextBlock Text="鈴木先生" 
                                       FontSize="10" 
                                       Foreground="#718096" 
                                       Margin="0,4,0,0" 
                                       TextAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>


</Application>
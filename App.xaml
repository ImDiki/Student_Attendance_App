<Application x:Class="Student_Attendance_System.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <Style x:Key="TechInputStyle" TargetType="Control">
            <Setter Property="Background" Value="#1A000000"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="1" CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="10,5" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlassComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#1A000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="ContentSite" Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="15">
                                <Grid>
                                    <ToggleButton x:Name="ToggleButton" Background="Transparent" BorderThickness="0" 
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                        <Path HorizontalAlignment="Right" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,10,0" 
                                      Fill="White" 
                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                                    </ToggleButton>

                                    <ContentPresenter Margin="15,0,30,0" 
                                              VerticalAlignment="Center" 
                                              HorizontalAlignment="Left" 
                                              Content="{TemplateBinding SelectionBoxItem}" 
                                              IsHitTestVisible="false"/>
                                </Grid>
                            </Border>

                            <Popup x:Name="Popup" Placement="Bottom" AllowsTransparency="True" 
                           IsOpen="{TemplateBinding IsDropDownOpen}" Focusable="False" PopupAnimation="Slide">
                                <Border x:Name="DropDown" Background="#111827" BorderBrush="#33FFFFFF" 
                                BorderThickness="1" CornerRadius="10" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="250">
                                    <ScrollViewer SnapsToDevicePixels="True" VerticalScrollBarVisibility="Hidden">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlassDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="#1A000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#1E293B" />
            </Style.Resources>
        </Style>
    </Application.Resources>
</Application>
<Page x:Class="Student_Attendance_System.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F5F5F5" Padding="15">
            <StackPanel Orientation="Horizontal">
                <Button Content="⬅ 戻る (Back)" Width="100" Height="35" Background="White" Foreground="#333" 
                        FontWeight="Bold" BorderThickness="1" Click="btnBack_Click"/>
                <TextBlock Text="新規学生登録" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Margin="50" HorizontalAlignment="Center">
            <TextBlock Text="学生名 (Name):" x:Name="txtID" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Width="300" Height="35" Margin="0,0,0,20"/>

            <TextBlock Text="学生番号 (ID):" x:Name="txtName" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Width="300" Height="35" Margin="0,0,0,30"/>

            <Button Content="📷 写真を撮る (Webcam)" Height="45" Width="300" Background="#2196F3" Foreground="White"
                    FontSize="16" FontWeight="Bold" Click="btnWebcam_Click" Margin="0,0,0,20"/>

            <Button Content="登録 (Register)"  Width="300" Background="#2196F3" Foreground="White" Margin="0,0,0,5"
                    FontSize="16" FontWeight="Bold" Click="btnSave_Click" />
            
        </StackPanel>
    </Grid>
</Page>
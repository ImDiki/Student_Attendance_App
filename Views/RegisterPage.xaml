<Page x:Class="Student_Attendance_System.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register" Background="{DynamicResource AppBackground}">

    <Grid>
        <ScrollViewer>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40">
                <Border Background="{DynamicResource SurfaceColor}" CornerRadius="20" Width="500" Padding="40" BorderBrush="{DynamicResource NeonPink}" BorderThickness="1" Height="900">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF0055" BlurRadius="20" Opacity="0.2"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="新規学生登録" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource SecondaryText}" Margin="0,0,0,30" HorizontalAlignment="Center"/>

                        <TextBlock Text="氏名 (Full Name)" Foreground="{DynamicResource SecondaryText}" Margin="0,5"/>
                        <TextBox x:Name="txtName" Height="40" Margin="0,0,0,20" Padding="10"/>

                        <TextBlock Text="学科 (Subject)" Foreground="{DynamicResource SecondaryText}" Margin="0,5"/>
                        <TextBox x:Name="txtSubject" Height="40" Margin="0,0,0,20" Padding="10"/>
                        
                        <TextBlock Text="学籍番号 (Student ID)" Foreground="{DynamicResource SecondaryText}" Margin="0,5"/>
                        <TextBox x:Name="txtId" Height="40" Margin="0,0,0,20" Padding="10"/>

                        <TextBlock Text="生年月日 (Date of Birth)" Foreground="{DynamicResource SecondaryText}" Margin="0,5"/>
                        <DatePicker x:Name="dpBirthday" Height="40" Margin="0,0,0,20" Padding="10"/>

                        <TextBlock Text="顔写真 (Face Photo)" Foreground="{DynamicResource SecondaryText}" Margin="0,10,0,5"/>
                        <Border Height="200" Background="#111" CornerRadius="10" BorderBrush="#333" BorderThickness="1" Margin="0,0,0,10">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="📷" FontSize="30" HorizontalAlignment="Center" Foreground="#555"/>
                                <TextBlock Text="カメラプレビュー (Preview)" Foreground="#555"/>
                            </StackPanel>
                        </Border>
                        <Button Content="撮影 (CAPTURE)" Height="50" BorderBrush="{DynamicResource SecondaryText}" Foreground="{DynamicResource SecondaryText}" Margin="0,0,0,25" Cursor="Hand"/>

                        <Button Content="登録 (REGISTER)" Height="50" BorderBrush="{DynamicResource SecondaryText}" Foreground="{DynamicResource SecondaryText}" Margin="0,0,0,15" Click="btnRegister_Click"/>

                        <Button Content="戻る (BACK)" Click="btnBack_Click" BorderThickness="0" Foreground="{DynamicResource SecondaryText}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
<Page x:Class="Student_Attendance_System.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register" Background="Transparent">

    <Grid>
        <Border Width="950" Height="720" CornerRadius="30" BorderThickness="1" BorderBrush="#33FFFFFF" Padding="40">
            <Border.Background>
                <SolidColorBrush Color="Black" Opacity="0.3"/>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.7*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,30,0">
                    <TextBlock x:Name="txtRegTitle" Text="NEW STUDENT REGISTRATION" FontSize="26" FontWeight="Bold" Foreground="White" Margin="0,0,0,25"/>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="0.7*"/>
                            <ColumnDefinition Width="0.7*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock x:Name="lblStuId" Text="Student ID" Foreground="#94A3B8"/>
                            <TextBox x:Name="txtStudentID" Style="{StaticResource TechInputStyle}" Height="38"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5,0,5,0">
                            <TextBlock x:Name="lblYear" Text="Year (学年)" Foreground="#94A3B8"/>
                            <ComboBox x:Name="cboYear" Height="38">
                                <ComboBoxItem Content="1st Year" IsSelected="True"/>
                                <ComboBoxItem Content="2nd Year"/>
                                <ComboBoxItem Content="3rd Year"/>
                                <ComboBoxItem Content="4th Year"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="5,0,0,0">
                            <TextBlock x:Name="lblClass" Text="Class" Foreground="#94A3B8"/>
                            <ComboBox x:Name="cboClass" Height="38">
                                <ComboBoxItem Content="A"/>
                                <ComboBoxItem Content="B"/>
                                <ComboBoxItem Content="C" IsSelected="True"/>
                                <ComboBoxItem Content="D"/>
                                <ComboBoxItem Content="E"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <TextBlock x:Name="lblName" Text="Full Name" Foreground="#94A3B8" Margin="0,10,0,5"/>
                    <TextBox x:Name="txtName" Style="{StaticResource TechInputStyle}" Height="38" Margin="0,0,0,15"/>

                    <TextBlock x:Name="lblDept" Text="Department (学科 / 専攻)" Foreground="#94A3B8" Margin="0,10,0,5"/>
                    <ComboBox x:Name="cboDepartment" Height="38">
                        <ComboBoxItem Content="ITスペシャリスト専攻 (IT Specialist) - 4 Years" IsSelected="True"/>
                        <ComboBoxItem Content="ネットワークセキュリティ専攻 (Network Security) - 4 Years"/>
                        <ComboBoxItem Content="システムエンジニア専攻 (Systems Engineer) - 3 Years"/>
                        <ComboBoxItem Content="ネットワークエンジニア専攻 (Network Engineer) - 3 Years"/>
                        <ComboBoxItem Content="Webエンジニア専攻 (Web Engineer) - 3 Years"/>
                        <ComboBoxItem Content="テクニカルコース (Technical Course) - 2 Years"/>
                        <ComboBoxItem Content="ネットワークシステムコース (Network Systems Course) - 2 Years"/>
                    </ComboBox>

                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock x:Name="lblBirth" Text="Birth Date" Foreground="#94A3B8"/>
                            <DatePicker x:Name="dpBirthDate" Height="38"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock x:Name="lblEnroll" Text="Enrollment Date" Foreground="#94A3B8"/>
                            <DatePicker x:Name="dpEnrollDate" Height="38"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock x:Name="lblPass" Text="System Password" Foreground="#06B6D4" Margin="0,15,0,5" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="txtPassword" Style="{StaticResource TechInputStyle}" Height="38"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                        <Button x:Name="btnCancel" Content="Cancel" Width="110" Height="42" Background="#334155" Foreground="White" Margin="0,0,15,0" Click="btnBack_Click"/>
                        <Button x:Name="btnSave" Content="Save Student" Width="160" Height="42" Background="#10B981" Foreground="White" FontWeight="Bold" Click="btnSave_Click"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <Border BorderBrush="#33FFFFFF" BorderThickness="1" CornerRadius="20" Height="340" Background="#1A000000" Margin="0,60,0,25">
                        <Grid>
                            <TextBlock Text="👤" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.1" Foreground="White"/>
                            <Image x:Name="imgCamera" Stretch="Uniform"/>
                        </Grid>
                    </Border>
                    <Button x:Name="btnCaptureText" Content="Capture Photo" Height="50" Background="#2563EB" Foreground="White" Click="btnCapture_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
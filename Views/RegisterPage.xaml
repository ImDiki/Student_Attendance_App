<Page x:Class="Student_Attendance_System.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register" Background="{StaticResource WindowBackgroundBrush}">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="White" Width="900" Height="600" CornerRadius="10" Margin="0,20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Opacity="0.2"/>
                </Border.Effect>

                <Grid Margin="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,30,0">
                        <TextBlock Text="NEW STUDENT REGISTRATION" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                        <TextBlock Text="Fill in details as shown on Student ID Card" FontSize="12" Foreground="Gray" Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Margin="0,0,10,0">
                                <TextBlock Text="Student ID (学籍番号)" FontWeight="SemiBold"/>
                                <TextBox x:Name="txtStudentID" Height="35" Margin="0,5,0,15" Padding="5" 
                                         ToolTip="Example: C1234"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Full Name (氏名)" FontWeight="SemiBold"/>
                                <TextBox x:Name="txtName" Height="35" Margin="0,5,0,15" Padding="5"
                                         ToolTip="Example: 大阪太郎/MG MG"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Department (学科)" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cboDepartment" Height="35" Margin="0,5,0,15">
                            <ComboBoxItem Content="情報システム開発 (Information Systems Dev)" IsSelected="True"/>
                            <ComboBoxItem Content="Webデザイン (Web Design)"/>
                            <ComboBoxItem Content="ゲームクリエイター (Game Creator)"/>
                            <ComboBoxItem Content="ITビジネス (IT Business)"/>
                        </ComboBox>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Margin="0,0,10,0">
                                <TextBlock Text="Birth Date (生年月日)" FontWeight="SemiBold"/>
                                <DatePicker x:Name="dpBirthDate" Height="35" Margin="0,5,0,15"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Enrollment Date (入学日)" FontWeight="SemiBold"/>
                                <DatePicker x:Name="dpEnrollDate" Height="35" Margin="0,5,0,15"/>
                            </StackPanel>
                        </Grid>

                        <Separator Margin="0,10"/>
                        <TextBlock Text="System Password" FontWeight="SemiBold" Foreground="#2980b9"/>
                        <PasswordBox x:Name="txtPassword" Height="35" Margin="0,5,0,20"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Cancel" Width="100" Height="40" Background="#95a5a6" Foreground="White" Margin="0,0,10,0" Click="btnBack_Click"/>
                            <Button Content="Save Student" Width="150" Height="40" Background="#27ae60" Foreground="White" Click="btnSave_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Height="300" Background="#EEE">
                            <Image x:Name="imgCamera" Stretch="Uniform"/>
                        </Border>

                        <Button x:Name="btnCapture" Content="Capture Face Photo" Height="40" Margin="0,15,0,0" Background="#2980b9" Foreground="White" Click="btnCapture_Click"/>

                        <TextBlock Text="* Capture photo for face recognition." FontSize="12" Foreground="Red" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                        <TextBlock Text="* Please ensure good lighting." FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
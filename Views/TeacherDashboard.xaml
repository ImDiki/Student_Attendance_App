<Page x:Class="Student_Attendance_System.Views.TeacherDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Teacher Dashboard" Background="{StaticResource WindowBackgroundBrush}">

    <Grid>
        <Border Background="White" Margin="40" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.2"/>
            </Border.Effect>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="TEACHER DASHBOARD" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="Manage Class Sessions &amp; Attendance" Foreground="{StaticResource SubTextBrush}"/>
                    <Separator Margin="0,15"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="09:30 AM - 11:00 AM" FontWeight="Bold" Foreground="#2980b9"/>
                                    <TextBlock Text="C# Programming (Room 301)" FontSize="16" Margin="0,5,0,0"/>
                                </StackPanel>
                                <Button x:Name="btnStartP1" Content="START CLASS" 
                                        Grid.Column="1" Width="120" Height="40" 
                                        Background="#27ae60" Foreground="White" 
                                        Click="btnStartClass_Click"/>
                            </Grid>
                        </Border>

                        <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="11:10 AM - 12:40 PM" FontWeight="Bold" Foreground="#2980b9"/>
                                    <TextBlock Text="Database Design (Room 301)" FontSize="16" Margin="0,5,0,0"/>
                                </StackPanel>
                                <Button x:Name="btnStartP2" Content="START CLASS" 
                                        Grid.Column="1" Width="120" Height="40" 
                                        Background="Gray" Foreground="White" 
                                        Click="btnStartClass_Click"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <Button Grid.Row="2" Content="Logout &amp; Return to Scanner" 
                        Height="45" Background="#c0392b" Foreground="White" 
                        Click="btnLogout_Click"/>
            </Grid>
        </Border>
    </Grid>
</Page>
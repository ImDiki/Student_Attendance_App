<Page x:Class="Student_Attendance_System.Views.ProjectOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Project Overview" Background="Transparent">

    <Grid Margin="30">
        <Border Background="#1AFFFFFF" CornerRadius="20" Padding="30" MaxWidth="850">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock x:Name="txtOverTitle" Text="SYSTEM GUIDE &amp; PRIVACY" Foreground="White" 
                               FontSize="28" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"/>

                    <StackPanel Margin="0,0,0,25">
                        <TextBlock x:Name="lblAttendance" Text="✅ ATTENDANCE CONFIRMATION PROCESS" Foreground="#38BDF8" 
                                   FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Border Background="#0DFFFFFF" CornerRadius="10" Padding="15">
                            <TextBlock x:Name="txtAttendanceContent" Foreground="#CBD5E1" FontSize="14" 
                                       LineHeight="22" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,25">
                        <TextBlock x:Name="lblRoles" Text="👥 USER ROLES &amp; PERMISSIONS" Foreground="#38BDF8" 
                                   FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Border Background="#0DFFFFFF" CornerRadius="10" Padding="15">
                            <TextBlock x:Name="txtRolesContent" Foreground="#CBD5E1" FontSize="14" 
                                       LineHeight="22" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,25">
                        <TextBlock x:Name="lblPrivacy" Text="🔒 DATA PRIVACY &amp; SECURITY" Foreground="#38BDF8" 
                                   FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Border Background="#0DFFFFFF" CornerRadius="10" Padding="15">
                            <TextBlock x:Name="txtPrivacyContent" Foreground="#CBD5E1" FontSize="14" 
                                       LineHeight="22" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>

                    <Separator Background="#22FFFFFF" Margin="0,10,0,20"/>

                    <StackPanel HorizontalAlignment="Center">
                        <CheckBox x:Name="chkAgree" Checked="chkAgree_Changed" Unchecked="chkAgree_Changed" 
                                  VerticalContentAlignment="Center" Margin="0,0,0,15">
                            <TextBlock x:Name="txtAgreeLabel" Foreground="White" FontSize="14"/>
                        </CheckBox>
                        <Button x:Name="btnProceed" IsEnabled="False" Click="btnProceed_Click"
                                Background="#38BDF8" Foreground="White" FontWeight="Bold" 
                                Padding="40,12" BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
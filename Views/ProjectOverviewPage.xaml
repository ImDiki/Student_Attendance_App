<Page x:Class="Student_Attendance_System.Views.ProjectOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Project Overview" Background="Transparent">

    <Grid Margin="30">
        <Border Width="850" Height="650" Background="#1A000000" CornerRadius="30" BorderBrush="#33FFFFFF" BorderThickness="1" Padding="40">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="txtOverTitle" Grid.Row="0" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,0,30" TextAlignment="Center"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="0,0,0,20">
                    <StackPanel>
                        <Border Background="#1AFFFFFF" CornerRadius="15" Padding="25" Margin="0,0,0,20" BorderBrush="#22FFFFFF" BorderThickness="1">
                            <StackPanel>
                                <TextBlock x:Name="lblHowToUse" Foreground="#06B6D4" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
                                <TextBlock x:Name="txtHowToUseContent" TextWrapping="Wrap" Foreground="#CBD5E0" FontSize="15" LineHeight="24"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#1AFFFFFF" CornerRadius="15" Padding="25" Margin="0,0,0,20" BorderBrush="#22FFFFFF" BorderThickness="1">
                            <StackPanel>
                                <TextBlock x:Name="lblPrivacy" Foreground="#10B981" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
                                <TextBlock x:Name="txtPrivacyContent" TextWrapping="Wrap" Foreground="#CBD5E0" FontSize="15" LineHeight="24"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" HorizontalAlignment="Center">
                    <CheckBox x:Name="chkAgree" VerticalContentAlignment="Center" Margin="0,0,0,20" Checked="chkAgree_Changed" Unchecked="chkAgree_Changed">
                        <TextBlock x:Name="txtAgreeLabel" Foreground="White" FontSize="14"/>
                    </CheckBox>

                    <Button x:Name="btnProceed" Width="300" Height="50" Cursor="Hand"
                            Background="#10B981" Foreground="White" FontSize="16" FontWeight="Bold" 
                            IsEnabled="False" Click="btnProceed_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
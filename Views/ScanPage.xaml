<Page x:Class="Student_Attendance_System.Views.ScanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Scan / Attendance" Background="Transparent"
      PreviewMouseDown="Page_PreviewMouseDown">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,30">
            <StackPanel>
                <TextBlock x:Name="txtTitle" Text="Attendance Scanning" FontSize="32" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="lblScannerLabel" Text="Scanner Active: Waiting for Card..." Foreground="#94A3B8" FontSize="14" Margin="0,5,0,0"/>
            </StackPanel>

            <TextBox x:Name="txtScannerInput" Width="1" Height="1" Opacity="0" KeyDown="txtScannerInput_KeyDown"/>
        </Grid>

        <Border Grid.Row="1" MaxWidth="600" VerticalAlignment="Top" 
                Background="#0DFFFFFF" CornerRadius="30" BorderThickness="1" BorderBrush="#33FFFFFF" Padding="50">
            <StackPanel VerticalAlignment="Center">
                <Border Width="160" Height="160" CornerRadius="80" BorderThickness="4" BorderBrush="#33FFFFFF" Margin="0,0,0,30">
                    <Grid>
                        <Ellipse Fill="#1AFFFFFF"/>
                        <TextBlock Text="👤" FontSize="80" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>
                    </Grid>
                </Border>

                <Border x:Name="AttendanceBadge" Background="#10B981" CornerRadius="15" Padding="20,10" 
                        Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock x:Name="txtBadgeStatus" Text="出席 ✅ PRESENT" Foreground="White" FontWeight="Bold" FontSize="20"/>
                </Border>

                <StackPanel Margin="10,0">
                    <TextBlock x:Name="lblHeaderName" Text="Name (氏名)" Foreground="#94A3B8" FontSize="14"/>
                    <TextBlock x:Name="lblScannedName" Text="Waiting..." Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,20"/>
                    <Separator Background="#1AFFFFFF" Margin="0,0,0,20"/>
                    <TextBlock x:Name="lblHeaderID" Text="Student ID (学籍番号)" Foreground="#94A3B8" FontSize="14"/>
                    <TextBlock x:Name="lblScannedID" Text="----" Foreground="#38BDF8" FontSize="24" FontWeight="SemiBold" Margin="0,5,0,10"/>
                </StackPanel>

                <TextBlock x:Name="lblStatusMessage" Text="Scan student card to start" FontSize="14" 
                           Foreground="#94A3B8" HorizontalAlignment="Center" Margin="0,30,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
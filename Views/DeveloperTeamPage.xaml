<Page x:Class="Student_Attendance_System.Views.DeveloperTeamPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Developer Team" Background="Transparent">

    <Grid Margin="30">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="OUR DEVELOPER TEAM" Foreground="White" FontSize="32" 
                           FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"/>

                <UniformGrid Columns="2" HorizontalAlignment="Center">
                    <Border Background="#1AFFFFFF" CornerRadius="15" Margin="10" Padding="20" Width="300">
                        <StackPanel HorizontalAlignment="Center">
                            <Ellipse Width="85" Height="85" Fill="#38BDF8" Margin="0,0,0,12"/>
                            <TextBlock Text="MYAT THADAR LINN" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="TEAM LEADER | FULL STACK" Foreground="#38BDF8" FontSize="13" FontWeight="Bold" Margin="0,5"/>
                            <TextBlock Text="C5292@oic.jp" Foreground="#CBD5E1" FontSize="12" Margin="0,2"/>

                            <StackPanel Orientation="Vertical" Margin="0,15,0,0">
                                <Button Content="Personal Portfolio" Click="btnLink_Click" Tag="https://Imdiki.github.io"
                                        Background="#334155" Foreground="White" Margin="0,0,0,8" Padding="15,5"/>
                                <Button Content="GitHub Profile" Click="btnLink_Click" Tag="https://github.com/Imdiki"
                                        Background="#334155" Foreground="White" Padding="15,5"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#1AFFFFFF" CornerRadius="15" Margin="10" Padding="20" Width="300">
                        <StackPanel HorizontalAlignment="Center">
                            <Ellipse Width="85" Height="85" Fill="#94A3B8" Margin="0,0,0,12"/>
                            <TextBlock Text="SI THU BO SANN" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="ADVISOR &amp; FULL STACK" Foreground="#38BDF8" FontSize="13" FontWeight="Bold" Margin="0,5"/>
                            <TextBlock Text="C5128@oic.jp" Foreground="#CBD5E1" FontSize="12" Margin="0,2"/>

                            <StackPanel Orientation="Vertical" Margin="0,15,0,0">
                                <Button Content="Send Email" Click="btnEmail_Click" Tag="mailto:C5128@oic.jp"
                                        Background="#334155" Foreground="White" Margin="0,0,0,8" Padding="15,5"/>
                                <Button Content="GitHub Profile" Click="btnLink_Click" Tag="https://github.com/sithubosann"
                                        Background="#334155" Foreground="White" Padding="15,5"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <TextBlock Text="CORE TECHNOLOGIES" Foreground="White" FontSize="20" FontWeight="Bold" 
                           Margin="0,40,0,15" HorizontalAlignment="Center"/>
                <WrapPanel HorizontalAlignment="Center">
                    <Border Background="#0DFFFFFF" Padding="12,6" CornerRadius="20" Margin="5">
                        <TextBlock Text="C# / .NET" Foreground="#38BDF8" FontSize="12"/>
                    </Border>
                    <Border Background="#0DFFFFFF" Padding="12,6" CornerRadius="20" Margin="5">
                        <TextBlock Text="WPF (XAML)" Foreground="#38BDF8" FontSize="12"/>
                    </Border>
                    <Border Background="#0DFFFFFF" Padding="12,6" CornerRadius="20" Margin="5">
                        <TextBlock Text="SQL SERVER" Foreground="#38BDF8" FontSize="12"/>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
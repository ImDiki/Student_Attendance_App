<Window x:Class="Student_Attendance_System.Views.WebcamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="カメラスキャン" Height="600" Width="900" Closing="Window_Closing">
    <Grid Background="#222">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
            <ComboBox x:Name="cboCamera" Width="250" Height="35" VerticalContentAlignment="Center" Margin="0,0,10,0"/>

            <Button Content="開始 (Start)" Click="btnStart_Click" Width="100" Height="35" Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="5"/>
            <Button Content="停止 (Stop)" Click="btnStop_Click" Width="100" Height="35" Background="#F44336" Foreground="White" FontWeight="Bold" Margin="5"/>
        </StackPanel>

        <Border Grid.Row="1" Margin="20" BorderBrush="#555" BorderThickness="2" Background="Black">
            <Image x:Name="imgWebcam" Stretch="Uniform"/>
        </Border>
    </Grid>
</Window>
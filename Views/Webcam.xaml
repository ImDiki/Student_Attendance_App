<Window x:Class="Student_Attendance_System.Views.Webcam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Camera Scan" Height="600" Width="900" Closing="Window_Closing"
        WindowStartupLocation="CenterScreen" Background="#1A1A1A">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="20" BorderBrush="#06B6D4" BorderThickness="2" Background="Black" CornerRadius="10">
            <Image x:Name="imgWebcam" Stretch="Uniform"/>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
            <Button x:Name="btnCapture" Content="📷 Take Photo" Click="btnCapture_Click" 
                    Width="180" Height="50" Background="#06B6D4" Foreground="White" FontSize="16" FontWeight="Bold" Margin="10"/>

            <Button x:Name="btnRetake" Content="🔄 Retake" Click="btnRetake_Click" Visibility="Collapsed"
                    Width="150" Height="50" Background="#F44336" Foreground="White" FontSize="16" FontWeight="Bold" Margin="10"/>

            <Button x:Name="btnConfirm" Content="✅ Use This Photo" Click="btnConfirm_Click" Visibility="Collapsed"
                    Width="180" Height="50" Background="#4CAF50" Foreground="White" FontSize="16" FontWeight="Bold" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
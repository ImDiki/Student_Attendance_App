<Page x:Class="Student_Attendance_System.Views.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Main Menu" Background="{StaticResource WindowBackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,20,0,40" HorizontalAlignment="Center">
                    <Border Width="10" Height="10" Background="#3498DB" CornerRadius="50" Margin="0,0,10,0"/>
                    <TextBlock Text="ATTENDANCE" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="btnHome" Content="Dashboard" Height="45" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="20,0,0,0" Click="btnHome_Click"/>

                <Button x:Name="btnScan" Content="QR Scan" Height="45" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="20,0,0,0" Margin="0,5,0,0" Click="btnScan_Click"/>

                <Button x:Name="btnProfile" Content="My Profile" Height="45" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="20,0,0,0" Margin="0,5,0,0" Click="btnProfile_Click"/>

                <Button x:Name="btnLogout" Content="Logout" Height="40" Background="#E74C3C" Foreground="White" Margin="0,100,0,0" Click="btnLogout_Click"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="{StaticResource WindowBackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="0,0,0,1">
                    <Grid>
                        <TextBlock x:Name="lblPageTitle" Text="Dashboard" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                        <TextBlock x:Name="lblUserInfo" Text="User: Mg Mg" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0" Foreground="{StaticResource SubTextBrush}"/>
                    </Grid>
                </Border>

                <Frame x:Name="ContentFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
            </Grid>
        </Border>
    </Grid>
</Page>
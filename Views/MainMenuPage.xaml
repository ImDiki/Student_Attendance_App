<Page x:Class="Student_Attendance_System.Views.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Main Menu" Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="学生出席管理システム" FontSize="32" FontWeight="Bold" Margin="0,0,0,40" HorizontalAlignment="Center" Foreground="#333"/>

            <Button Content="管理者ログイン (Login)" Height="55" Width="320" Margin="10" 
                    Background="#4CAF50" Foreground="White" FontSize="16" FontWeight="Bold"
                    Click="btnLogin_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="新規学生登録 (Register)" Height="55" Width="320" Margin="10" 
                    Background="#2196F3" Foreground="White" FontSize="16" FontWeight="Bold"
                    Click="btnRegister_Click"/>

            <Button Content="管理者ダッシュボード (Dashboard)" Height="55" Width="320" Margin="10" 
                    Background="#FF9800" Foreground="White" FontSize="16" FontWeight="Bold"
                    Click="btnDashboard_Click"/>

        </StackPanel>
    </Grid>
</Page>
<Page x:Class="Student_Attendance_System.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Dashboard" Background="{DynamicResource AppBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#333" BorderThickness="0,0,0,1" Padding="20">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📊" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="管理者ダッシュボード" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource SecondaryText}"/>
                        <TextBlock Text="Admin Dashboard" FontSize="12" Foreground="{DynamicResource SecondaryText}"/>
                    </StackPanel>
                </StackPanel>

                <Button Content="ログアウト (LOGOUT)" Click="btnBack_Click" HorizontalAlignment="Right" 
                        BorderBrush="{DynamicResource NeonPink}" Foreground="{DynamicResource SecondaryText}" Height="40" Padding="15,0"/>
            </Grid>
        </Border>

        <TabControl Grid.Row="1" BorderThickness="0" Background="Transparent" Margin="20">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                    <Setter Property="Padding" Value="20,10"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid>
                                    <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="0,0,0,3" Margin="0,0,15,0">
                                        <ContentPresenter x:Name="ContentSite"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"
                                                          ContentSource="Header"
                                                          Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource NeonBlue}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource NeonBlue}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabItem Header="概要 (OVERVIEW)">
                <Border Background="{DynamicResource SurfaceColor}" CornerRadius="15" Margin="0,20,0,0" Padding="30" BorderBrush="#333" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="本日の出席状況 (Today's Attendance)" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                        <Grid Height="300">
                            <Border BorderBrush="{DynamicResource NeonBlue}" BorderThickness="1" CornerRadius="10" Opacity="0.3" Background="#111">
                                <TextBlock Text="📊 Chart Placeholder" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource NeonBlue}" FontSize="18"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </TabItem>

            <TabItem Header="開発チーム (TEAM)">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                    <ItemsControl x:Name="TeamItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="300" Height="420" Background="{DynamicResource SurfaceColor}" CornerRadius="15" Margin="15" Padding="20" BorderThickness="1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush" Value="#333"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource NeonBlue}"/>
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#00FFFF" BlurRadius="20" Opacity="0.3"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <StackPanel>
                                        <Border Width="120" Height="120" CornerRadius="60" Margin="0,0,0,20" BorderBrush="{DynamicResource NeonBlue}" BorderThickness="2">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding ImagePath}" Stretch="UniformToFill"/>
                                            </Border.Background>
                                            <Border.Effect>
                                                <DropShadowEffect Color="#00FFFF" BlurRadius="10" Opacity="0.5"/>
                                            </Border.Effect>
                                        </Border>

                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="20" Foreground="White" 
                                                   HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Height="60"/>

                                        <TextBlock Text="{Binding Role}" Foreground="{DynamicResource NeonPink}" FontWeight="Bold" 
                                                   HorizontalAlignment="Center" Margin="0,0,0,15" FontSize="14"/>

                                        <Border Height="1" Background="#333" Margin="10,0,10,15"/>

                                        <TextBlock Text="{Binding Major}" FontSize="12" Foreground="{DynamicResource SecondaryText}" 
                                                   HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,5"/>

                                        <Border BorderBrush="{DynamicResource NeonBlue}" BorderThickness="1" CornerRadius="5" HorizontalAlignment="Center" Padding="10,5" Margin="0,10,0,0" Background="#1100FFFF">
                                            <TextBlock Text="{Binding ClassInfo}" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource SecondaryText}"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
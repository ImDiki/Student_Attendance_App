<Window x:Class="Student_Attendance_System.Views.Login_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_Attendance_System.Views"
        mc:Ignorable="d"
        Title="Login" Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="30"/>

            <!-- Drop Shadow (bool မသုံး) -->
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12"
                              ShadowDepth="2"
                              Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="{DynamicResource WindowBackgroundBrush}">

        <!-- Theme Toggle -->
        <Button x:Name="BtnThemeToggle"
            Content="🌙"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,16,16,0"
            Padding="10,6"
            Click="ThemeToggle_Click"/>

        <!-- Center Card -->
        <Border Width="350"
            Style="{StaticResource CardBorderStyle}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">

            <StackPanel>

                <!-- Title -->
                <TextBlock Text="Student Attendance System"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextBrush}"
                       TextAlignment="Center"
                       Margin="0,0,0,5"/>

                <TextBlock Text="Login"
                       FontSize="14"
                       Foreground="{DynamicResource SubTextBrush}"
                       TextAlignment="Center"
                       Margin="0,0,0,25"/>

                <!-- Username -->
                <TextBlock Text="Username"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBrush}"
                       Margin="0,0,0,5"/>

                <TextBox x:Name="txtUsername"
                     Height="35"
                     Padding="10"
                     FontSize="14"
                     Margin="0,0,0,15"
                     BorderBrush="{DynamicResource CardBorderBrush}"/>

                <!-- Password -->
                <TextBlock Text="Password"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBrush}"
                       Margin="0,0,0,5"/>

                <PasswordBox x:Name="txtPassword"
                         Height="35"
                         Padding="10"
                         FontSize="14"
                         Margin="0,0,0,25"
                         BorderBrush="{DynamicResource CardBorderBrush}"/>

                <!-- Login Button -->
                <Button Content="Login"
                    Height="40"
                    FontSize="15"
                    FontWeight="Bold"
                    Background="BlueViolet"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>

                <!-- Bottom Links -->
                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">

                    <TextBlock Text="Register"
                           Foreground="{DynamicResource TextBrush}"
                           Cursor="Hand"
                           Margin="0,0,15,0"/>

                    <TextBlock Text="About Us"
                           Foreground="{DynamicResource SubTextBrush}"
                           Cursor="Hand"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>

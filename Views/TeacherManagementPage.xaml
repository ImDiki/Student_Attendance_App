<Page x:Class="Student_Attendance_System.Views.TeacherManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Teacher Management"
      Background="Transparent"
      Loaded="Page_Loaded">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="1.8*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== LEFT: Form ===== -->
        <Border Grid.Column="0"
                CornerRadius="25"
                BorderThickness="1"
                BorderBrush="#33FFFFFF"
                Padding="30"
                Background="#1A000000"
                Margin="0,0,15,0">

            <StackPanel>

                <TextBlock Text="TEACHER MANAGEMENT"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Teacher ID"
                           Foreground="#94A3B8"/>
                <TextBox x:Name="txtTeacherCode"
                         Height="38"
                         Style="{StaticResource TechInputStyle}"
                         Margin="0,5,0,12"/>

                <TextBlock Text="Full Name"
                           Foreground="#94A3B8"/>
                <TextBox x:Name="txtFullName"
                         Height="38"
                         Style="{StaticResource TechInputStyle}"
                         Margin="0,5,0,12"/>

                <TextBlock Text="Department"
                           Foreground="#94A3B8"/>
                <ComboBox x:Name="cboDepartment"
                          Height="38"
                          Margin="0,5,0,12">
                    <ComboBoxItem Content="ITスペシャリスト専攻 (IT Specialist) - 4 Years"/>
                    <ComboBoxItem Content="ネットワークセキュリティ専攻 (Network Security) - 4 Years"/>
                    <ComboBoxItem Content="システムエンジニア専攻 (Systems Engineer) - 3 Years"/>
                    <ComboBoxItem Content="ネットワークエンジニア専攻 (Network Engineer) - 3 Years"/>
                    <ComboBoxItem Content="Webエンジニア専攻 (Web Engineer) - 3 Years"/>
                    <ComboBoxItem Content="テクニカルコース (Technical Course) - 2 Years"/>
                    <ComboBoxItem Content="ネットワークシステムコース (Network Systems) - 2 Years"/>
                </ComboBox>

                <TextBlock Text="Email"
                           Foreground="#94A3B8"/>
                <TextBox x:Name="txtEmail"
                         Height="38"
                         Style="{StaticResource TechInputStyle}"
                         Margin="0,5,0,12"/>

                <TextBlock Text="Phone"
                           Foreground="#94A3B8"/>
                <TextBox x:Name="txtPhone"
                         Height="38"
                         Style="{StaticResource TechInputStyle}"
                         Margin="0,5,0,12"/>

                <TextBlock Text="Password"
                           Foreground="#06B6D4"
                           FontWeight="SemiBold"/>
                <PasswordBox x:Name="txtPassword"
                             Height="38"
                             Style="{StaticResource TechInputStyle}"
                             Margin="0,5,0,18"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Add"
                            Width="90" Height="42"
                            Background="#10B981"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="0,0,10,0"
                            Click="btnAdd_Click"/>
                    <Button Content="Update"
                            Width="90" Height="42"
                            Background="#3B82F6"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="0,0,10,0"
                            Click="btnUpdate_Click"/>
                    <Button Content="Clear"
                            Width="90" Height="42"
                            Background="#334155"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="btnClear_Click"/>
                </StackPanel>

                <Button Content="Reset Password"
                        Height="42"
                        Background="#F59E0B"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,15,0,0"
                        Click="btnResetPassword_Click"/>

                <Button Content="Delete Teacher"
                        Height="42"
                        Background="#EF4444"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,10,0,0"
                        Click="btnDelete_Click"/>

                <TextBlock x:Name="txtHint"
                           Foreground="#94A3B8"
                           Margin="0,15,0,0"
                           Text="Tip: Select a teacher from the list to edit/delete."/>
            </StackPanel>
        </Border>

        <!-- ===== RIGHT: List ===== -->
        <Border Grid.Column="1"
                CornerRadius="25"
                BorderThickness="1"
                BorderBrush="#33FFFFFF"
                Padding="20"
                Background="#0DFFFFFF">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Teachers List"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               DockPanel.Dock="Left"/>

                    <Button Content="Refresh"
                            Width="100"
                            Height="36"
                            Background="#2563EB"
                            Foreground="White"
                            FontWeight="Bold"
                            DockPanel.Dock="Right"
                            Click="btnRefresh_Click"/>
                </DockPanel>

                <DataGrid x:Name="dgTeachers"
          Grid.Row="1"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          SelectionMode="Single"
          SelectionChanged="dgTeachers_SelectionChanged"

          Background="#0DFFFFFF"
          Foreground="White"
          BorderThickness="0"
          HeadersVisibility="Column"

          RowBackground="#0DFFFFFF"
          AlternatingRowBackground="#14FFFFFF"
          GridLinesVisibility="None"
          FontSize="13">

                    <DataGrid.Resources>

                        <!-- ROW -->
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="#0DFFFFFF"/>
                            <Style.Triggers>
                                <!-- Hover (very soft) -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1FFFFFFF"/>
                                </Trigger>

                                <!-- Selected -->
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2563EB"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                        <!-- HEADER -->
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#0DFFFFFF"/>
                            <Setter Property="Foreground" Value="#E5E7EB"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,6"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>

                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="TeacherID" Binding="{Binding TeacherCode}" Width="70"/>
                        <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                        <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="*"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                        <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Border>
    </Grid>
</Page>

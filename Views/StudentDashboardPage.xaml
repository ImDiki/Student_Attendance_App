<Page x:Class="Student_Attendance_System.Views.StudentDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#0F172A" Loaded="Page_Loaded">
    <Grid Margin="30">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                <Border Width="100" Height="100" CornerRadius="50" BorderBrush="#38BDF8" BorderThickness="2" ClipToBounds="True">
                    <Image x:Name="imgProfileDisplay" Stretch="UniformToFill" Source="/Assets/default_user.png"/>
                </Border>
                <StackPanel VerticalAlignment="Center" Margin="20,0,0,0">
                    <TextBlock x:Name="txtWelcome" FontSize="32" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="txtYearLevel" FontSize="18" Foreground="#94A3B8"/>
                </StackPanel>
            </StackPanel>

            <UniformGrid Columns="3" Height="100" Margin="0,0,0,20">
                <Border Background="#1E293B" CornerRadius="10" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Total" Foreground="#94A3B8"/>
                        <TextBlock x:Name="txtTotal" FontSize="24" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                <Border Background="#1E293B" CornerRadius="10" Margin="5,0,5,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Present" Foreground="#94A3B8"/>
                        <TextBlock x:Name="txtPresent" FontSize="24" Foreground="#22C55E" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                <Border Background="#1E293B" CornerRadius="10" Margin="10,0,0,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Rate" Foreground="#94A3B8"/>
                        <TextBlock x:Name="txtPercent" FontSize="24" Foreground="#38BDF8" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <TextBlock Text="Weekly Timetable" FontSize="20" Foreground="White" Margin="0,10"/>
            <Frame x:Name="TimetableFrame" NavigationUIVisibility="Hidden" MinHeight="300" Background="#1E293B"/>
        </StackPanel>
    </Grid>
</Page>
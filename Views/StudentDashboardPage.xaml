<Page x:Class="Student_Attendance_System.Views.StudentDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Student Dashboard" Background="{StaticResource WindowBackgroundBrush}"
      Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <StackPanel>
                <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,25">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock x:Name="txtWelcome" Text="ようこそ！ (Welcome back!)" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                        <TextBlock Text="出席状況を確認してください。" Foreground="{StaticResource SubTextBrush}" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#3498DB" CornerRadius="12" Height="110" Margin="0,0,10,0" Padding="15">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Total Classes" Foreground="White" FontSize="14" Opacity="0.9"/>
                            <TextBlock x:Name="txtTotal" Text="0" Foreground="White" FontSize="36" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="#2ECC71" CornerRadius="12" Height="110" Margin="5,0,5,0" Padding="15">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Present (出席)" Foreground="White" FontSize="14" Opacity="0.9"/>
                            <TextBlock x:Name="txtPresent" Text="0" Foreground="White" FontSize="36" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="#E74C3C" CornerRadius="12" Height="110" Margin="10,0,0,0" Padding="15">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Absent (欠席)" Foreground="White" FontSize="14" Opacity="0.9"/>
                            <TextBlock x:Name="txtAbsent" Text="0" Foreground="White" FontSize="36" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,25">
                    <Grid>
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="Overall Attendance Rate" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="You need 80% to pass." Foreground="Gray" FontSize="12"/>
                        </StackPanel>
                        <TextBlock x:Name="txtPercent" Text="0%" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="32" FontWeight="Bold" Foreground="#2980b9"/>
                    </Grid>
                </Border>

                <TextBlock Text="今週の時間割 (Weekly Timetable)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="{StaticResource TextBrush}"/>
                <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,0,25">
                    <Frame x:Name="TimetableFrame" Height="450" NavigationUIVisibility="Hidden"/>
                </Border>

                <TextBlock Text="欠席・遅刻届 (Leave/Late Request)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="{StaticResource TextBrush}"/>
                <Border Background="White" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="申請理由 (Reason):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtLeaveReason" Height="80" TextWrapping="Wrap" VerticalContentAlignment="Top" Padding="5" AcceptsReturn="True" BorderBrush="#DDD"/>
                        <Button Content="申請を送信する (Submit)" Background="#E67E22" Foreground="White" Width="180" Height="40" Margin="0,15,0,0" HorizontalAlignment="Right" Click="btnSubmitLeave_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
<Page x:Class="Student_Attendance_System.Views.StudentDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Student Dashboard" Background="#E3F2FD">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="15">
            <StackPanel Orientation="Horizontal">
                <Button Content="⬅ Logout (ログアウト)" Width="120" Height="35" Background="#FFEBEE" Foreground="Red" 
                        FontWeight="Bold" BorderThickness="0" Click="btnLogout_Click"/>
                <TextBlock x:Name="txtWelcome" Text="Welcome Student" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="🎓 Student Portal" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#1976D2"/>
            <TextBlock Text="Attendance History will appear here." FontSize="16" Foreground="Gray" Margin="0,10,0,0"/>

            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,30,0,0" Width="300">
                <StackPanel>
                    <TextBlock Text="My Attendance" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ProgressBar Value="80" Height="20" Foreground="#4CAF50"/>
                    <TextBlock Text="80% Present" HorizontalAlignment="Right" FontSize="12"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
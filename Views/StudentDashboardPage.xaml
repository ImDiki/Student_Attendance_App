<Page x:Class="Student_Attendance_System.Views.StudentDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Student Dashboard"
      Background="#0F172A" Loaded="Page_Loaded">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,20,40,40">

                <Grid Margin="0,0,0,35">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Width="140" Height="140" BorderBrush="#38BDF8" BorderThickness="5" CornerRadius="15">
                        <Border CornerRadius="12" ClipToBounds="True">
                            <Image x:Name="imgProfileDisplay" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" Source="/Assets/default_user.png"/>
                        </Border>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="30,0,0,0">
                        <TextBlock x:Name="txtWelcome" FontSize="36" FontWeight="ExtraBold" Foreground="White" Text="Eric, Welcome back!"/>

                        <Button x:Name="btnViewProfile" Click="Profile_Click" Content="View Profile" 
                                HorizontalAlignment="Left" Margin="0,10,0,0" 
                                Background="#38BDF8" Foreground="White" FontWeight="Bold" 
                                Padding="15,5" BorderThickness="0" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <TextBlock x:Name="txtWelcomeSub" FontSize="16" Foreground="#94A3B8" Margin="0,15,0,0" Text="Check your attendance status."/>
                    </StackPanel>
                </Grid>

                <UniformGrid Columns="4" Margin="0,0,0,40">
                    <Border Background="#1E293B" CornerRadius="15" Margin="0,0,12,0" Padding="25">
                        <StackPanel>
                            <TextBlock x:Name="lblTotal" Text="TOTAL" Foreground="#94A3B8" FontSize="13" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="txtTotal" Text="0" FontSize="32" Foreground="White" FontWeight="Black"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#1E293B" CornerRadius="15" Margin="6,0,6,0" Padding="25">
                        <StackPanel>
                            <TextBlock x:Name="lblPresent" Text="PRESENT" Foreground="#94A3B8" FontSize="13" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="txtPresent" Text="0" FontSize="32" Foreground="#22C55E" FontWeight="Black"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#1E293B" CornerRadius="15" Margin="6,0,6,0" Padding="25">
                        <StackPanel>
                            <TextBlock x:Name="lblRate" Text="ATTENDANCE RATE" Foreground="#94A3B8" FontSize="13" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="txtPercent" Text="0.0%" FontSize="32" Foreground="#38BDF8" FontWeight="Black"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#1E293B" CornerRadius="15" Margin="12,0,0,0" Padding="25">
                        <StackPanel>
                            <TextBlock x:Name="lblYear" Text="YEAR LEVEL" Foreground="#94A3B8" FontSize="13" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="txtYearDisplay" Text="-" FontSize="28" Foreground="#38BDF8" FontWeight="Black"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <TextBlock x:Name="lblTimetable" Text="Weekly Timetable" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
                <Border Background="#1E293B" CornerRadius="20" Padding="5">
                    <Frame x:Name="TimetableFrame" NavigationUIVisibility="Hidden" MinHeight="550" Background="Transparent"/>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
<Page x:Class="Student_Attendance_System.Views.StudentDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Student Dashboard">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#333" Grid.Column="0">
            <StackPanel Margin="10">
                <TextBlock Text="My School" Foreground="White" FontSize="18" Margin="0,0,0,20"/>

                <Button Content="Dashboard" Height="35" Margin="0,5"/>
                <Button Content="Timetable" Height="35" Margin="0,5"/>
                <Button Content="Logout" Height="35" Margin="0,20" Background="Red" Foreground="White" Click="btnLogout_Click"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="20">
            <StackPanel>
                <TextBlock x:Name="lblWelcome" Text="Welcome, Student!" FontSize="24" FontWeight="Bold"/>

                <Border Background="#E3F2FD" Height="100" Margin="0,20,0,0" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Attendance Percentage" FontWeight="Bold"/>
                        <TextBlock x:Name="lblPercent" Text="85%" FontSize="30" Foreground="Blue"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
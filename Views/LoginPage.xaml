<Page x:Class="Student_Attendance_System.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login" Background="Transparent">

    <Grid>
        <Border Width="400" VerticalAlignment="Center" HorizontalAlignment="Center"
                CornerRadius="25" BorderThickness="1" BorderBrush="#33FFFFFF" Padding="40">
            <Border.Background>
                <SolidColorBrush Color="White" Opacity="0.05"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" Color="Black" Opacity="0.4" ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="txtTitle" Text="WELCOME" FontSize="32" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtSubTitle" Text="Sign in to continue" Foreground="#94A3B8" 
                           HorizontalAlignment="Center" Margin="0,5,0,35" FontSize="14"/>

                <TextBlock x:Name="lblUsername" Text="Username" Foreground="#94A3B8" Margin="0,0,0,8" FontSize="12" FontWeight="SemiBold"/>
                <TextBox x:Name="txtUsername" Height="40" Background="#1AFFFFFF" Foreground="White" 
                         BorderBrush="#33FFFFFF" BorderThickness="1" VerticalContentAlignment="Center" Padding="10,0">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="12"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <TextBlock x:Name="lblPassword" Text="Password" Foreground="#94A3B8" Margin="0,20,0,8" FontSize="12" FontWeight="SemiBold"/>
                <PasswordBox x:Name="txtPassword" Height="40" Background="#1AFFFFFF" Foreground="White" 
                             BorderBrush="#33FFFFFF" BorderThickness="1" VerticalContentAlignment="Center" Padding="10,0">
                    <PasswordBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="12"/>
                        </Style>
                    </PasswordBox.Resources>
                </PasswordBox>

                <Button x:Name="btnLogin"
        Content="LOGIN" Click="btnLogin_Click" IsDefault="True" Margin="0,35,0,0" Height="48" FontWeight="Bold" Foreground="White" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="btnBorder" CornerRadius="12">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                        <GradientStop Color="#06B6D4" Offset="0"/>
                                        <GradientStop Color="#3B82F6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="btnBorder" Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <TextBlock x:Name="txtForgetPass" Text="Forgot Password?" Foreground="#38BDF8" 
                           HorizontalAlignment="Center" Margin="0,25,0,0" Cursor="Hand"
                           PreviewMouseLeftButtonDown="ForgetPassword_Click"/>

                <TextBlock x:Name="txtRegisterLink" Text="No account? Register here." Foreground="#94A3B8" 
                           HorizontalAlignment="Center" Margin="0,15,0,0" Cursor="Hand"
                           PreviewMouseLeftButtonDown="GoToRegister_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
<Window x:Class="Student_Attendance_System.Views.EditStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Student" x:Name="EditWin" Height="450" Width="400" Background="#111827">
    <StackPanel Margin="20">
        <TextBlock Text="EDIT STUDENT PROFILE" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBlock Text="Full Name" Foreground="#94A3B8" Margin="0,5"/>
        <TextBox x:Name="lblFullName" Style="{StaticResource TechInputStyle}"/>

        <TextBlock Text="Year Level" Foreground="#94A3B8" Margin="0,5"/>
        <TextBox x:Name="lblYear" Style="{StaticResource TechInputStyle}"/>

        <TextBlock Text="Class" Foreground="#94A3B8" Margin="0,5"/>
        <TextBox x:Name="lblClass" Style="{StaticResource TechInputStyle}"/>

        <TextBlock Text="Department (Major)" Foreground="#94A3B8" Margin="0,5"/>
        <TextBox x:Name="lblMajor" Style="{StaticResource TechInputStyle}"/>

        <UniformGrid Columns="2" Margin="0,20,0,0">
            <Button x:Name="btnSave" Content="SAVE CHANGES" Click="Save_Click" Background="#22C55E" Style="{StaticResource ModernButtonStyle}" Margin="0,0,5,0"/>
            <Button x:Name="btnDelete" Content="DELETE STUDENT" Click="Delete_Click" Background="#EF4444" Style="{StaticResource ModernButtonStyle}" Margin="5,0,0,0"/>
        </UniformGrid>
    </StackPanel>
</Window>
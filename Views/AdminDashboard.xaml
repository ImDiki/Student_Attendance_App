<Page x:Class="Student_Attendance_System.Views.AdminDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Admin Dashboard"
      Background="Transparent"
      Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <StackPanel>

                <Border Background="#0DFFFFFF" CornerRadius="20"
                        BorderThickness="1" BorderBrush="#26FFFFFF"
                        Padding="25" Margin="0,0,0,25">
                    <Grid>
                        <StackPanel>
                            <TextBlock x:Name="txtWelcome"
                                       Text="管理者ダッシュボード"
                                       FontSize="26" FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock x:Name="txtWelcomeSub"
                                       Text="システム全体を管理します。"
                                       Foreground="#94A3B8"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#1A3B82F6"
                            CornerRadius="15" BorderThickness="1"
                            BorderBrush="#333B82F6"
                            Height="140" Margin="0,0,10,0" Padding="25">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="lblStudents" Text="Students"
                                       Foreground="#38BDF8"
                                       FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtStudents"
                                       Text="0"
                                       Foreground="White"
                                       FontSize="42" FontWeight="Bold" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="#1A10B981"
                            CornerRadius="15" BorderThickness="1"
                            BorderBrush="#3310B981"
                            Height="140" Margin="10,0,0,0" Padding="25">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="lblTeachers" Text="Teachers"
                                       Foreground="#34D399"
                                       FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtTeachers"
                                       Text="0"
                                       Foreground="White"
                                       FontSize="42" FontWeight="Bold" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <TextBlock x:Name="lblMgmtMenu" Text="管理メニュー"
                           FontSize="22" FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,15"/>

                <UniformGrid Columns="2" Margin="0,0,0,25">
                    <Button Content="👨‍🏫 教師管理 (Teachers)" Height="70"
                            Background="#3B82F6" Foreground="White" FontSize="18" FontWeight="SemiBold"
                            Margin="0,0,10,0" Click="ManageTeachers_Click"
                            Style="{StaticResource ModernButtonStyle}"/>

                    <Button Content="🏫 クラス管理 (Classes)" Height="70"
                            Background="#F59E0B" Foreground="White" FontSize="18" FontWeight="SemiBold"
                            Margin="10,0,0,0" Click="ManageClasses_Click"
                            Style="{StaticResource ModernButtonStyle}"/>
                </UniformGrid>

                <Border Background="#0DFFFFFF"
                        CornerRadius="20"
                        BorderThickness="1"
                        BorderBrush="#26FFFFFF"
                        Padding="20">
                    <StackPanel>
                        <TextBlock x:Name="lblTimetableTitle" Text="ADMIN MANAGEMENT" 
                                   Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Frame x:Name="AdminFrame"
                               Height="Auto"
                               MinHeight="400"
                               NavigationUIVisibility="Hidden"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
<Page x:Class="Student_Attendance_System.Views.TimetablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Time Table" Background="#F4F6F9">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="1Cクラス 時間割" FontSize="26" FontWeight="Bold" Foreground="#2C3E50"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15,0,15">
            <TextBlock Text="学期選択: " VerticalAlignment="Center" FontSize="16"/>
            <ComboBox x:Name="cboTerm" Width="150" Height="30" SelectionChanged="cboTerm_SelectionChanged">
                <ComboBoxItem Content="前期 (Former Term)"/>
                <ComboBoxItem Content="後期 (Latter Term)" IsSelected="True"/>
            </ComboBox>
            <TextBlock x:Name="txtTodayInfo" Text="本日: 木曜日" Margin="30,0,0,0" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="#2980b9"/>
        </StackPanel>

        <DataGrid Grid.Row="2" x:Name="dgFullTimetable" AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="True" HeadersVisibility="All"
                  FontSize="13" SelectionMode="Single" SelectionUnit="Cell"
                  GridLinesVisibility="None" Background="Transparent" BorderThickness="0">

            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="時間" Binding="{Binding Time}" Width="100"/>

                <DataGridTemplateColumn Header="月 (Mon)" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Monday}" Style="{StaticResource TimetableButtonStyle}" 
                                    Background="{Binding MonColor}" Click="Subject_Click" 
                                    IsEnabled="{Binding IsMonEnabled}" BorderThickness="0.5" BorderBrush="#EEE"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="火 (Tue)" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Tuesday}" Style="{StaticResource TimetableButtonStyle}" 
                                    Background="{Binding TueColor}" Click="Subject_Click" 
                                    IsEnabled="{Binding IsTueEnabled}" BorderThickness="0.5" BorderBrush="#EEE"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="水 (Wed)" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Wednesday}" Style="{StaticResource TimetableButtonStyle}" 
                                    Background="{Binding WedColor}" Click="Subject_Click" 
                                    IsEnabled="{Binding IsWedEnabled}" BorderThickness="0.5" BorderBrush="#EEE"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="木 (Thu)" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Thursday}" Style="{StaticResource TimetableButtonStyle}" 
                                    Background="{Binding ThuColor}" Click="Subject_Click" 
                                    IsEnabled="{Binding IsThuEnabled}" BorderThickness="0.5" BorderBrush="#EEE"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="金 (Fri)" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Friday}" Style="{StaticResource TimetableButtonStyle}" 
                                    Background="{Binding FriColor}" Click="Subject_Click" 
                                    IsEnabled="{Binding IsFriEnabled}" BorderThickness="0.5" BorderBrush="#EEE"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
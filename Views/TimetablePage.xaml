<Page x:Class="Student_Attendance_System.Views.TimetablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Time Table">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F0F2F5" Offset="0"/>
                <GradientStop Color="#E2E8F0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="txtTitle" Grid.Row="0" Text="時間割 (Timetable)" FontSize="26" FontWeight="ExtraBold" Foreground="#1A202C"/>

            <Border Grid.Row="1" Background="#80FFFFFF" CornerRadius="12" Margin="0,10,0,15" Padding="15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="lblYearSelect" Text="学年: " VerticalAlignment="Center" FontSize="14" Margin="0,0,5,0"/>
                    <ComboBox x:Name="cboYear" Width="100" Height="30" Margin="0,0,15,0" SelectionChanged="Filter_Changed">
                        <ComboBoxItem Content="1st Year" Tag="1"/>
                        <ComboBoxItem Content="2nd Year" Tag="2"/>
                        <ComboBoxItem Content="3rd Year" Tag="3"/>
                        <ComboBoxItem Content="4th Year" Tag="4" IsSelected="True"/>
                    </ComboBox>

                    <TextBlock x:Name="lblClassSelect" Text="クラス: " VerticalAlignment="Center" FontSize="14" Margin="0,0,5,0"/>
                    <ComboBox x:Name="cboClass" Width="80" Height="30" Margin="0,0,15,0" SelectionChanged="Filter_Changed">
                        <ComboBoxItem Content="A"/>
                        <ComboBoxItem Content="B"/>
                        <ComboBoxItem Content="C" IsSelected="True"/>
                        <ComboBoxItem Content="D"/>
                        <ComboBoxItem Content="E"/>
                    </ComboBox>
                    <TextBlock x:Name="lblTermSelect" Text="学期: " VerticalAlignment="Center" FontSize="14" FontWeight="Medium" Margin="0,0,5,0"/>
                    <ComboBox x:Name="cboTerm" Width="120" Height="30" SelectionChanged="Filter_Changed">
                        <ComboBoxItem Content="前期 (Former)"/>
                        <ComboBoxItem Content="後期 (Latter)" IsSelected="True"/>
                    </ComboBox>

                    <TextBlock x:Name="txtTodayInfo" Text="Today" Margin="25,0,0,0" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Foreground="#3182CE"/>
                </StackPanel>
            </Border>

            <Grid x:Name="TimetableGrid" Grid.Row="2" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="hPeriod" Text="時限" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock x:Name="hMon" Text="月" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock x:Name="hTue" Text="火" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock x:Name="hWed" Text="水" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock x:Name="hThu" Text="木" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock x:Name="hFri" Text="金" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
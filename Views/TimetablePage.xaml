<Page x:Class="Student_Attendance_System.Views.TimetablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Timetable" Background="{StaticResource WindowBackgroundBrush}"
      Loaded="Page_Loaded">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="CLASS 1C - TIMETABLE" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
            <TextBlock x:Name="txtToday" Text="Today: Monday" Foreground="Gray" FontSize="16" Margin="0,0,0,20"/>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="500">
                <StackPanel>
                    <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="09:10 - 10:40 (Period 1)" FontWeight="Bold" Foreground="#2980b9"/>
                                <TextBlock x:Name="txtP1" Text="Subject..." FontSize="16"/>
                            </StackPanel>
                            <Button x:Name="btnP1" Content="START CLASS" HorizontalAlignment="Right" Width="120" Height="35" Background="#27ae60" Foreground="White" Click="btnStart_Click" Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                    <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="10:50 - 12:20 (Period 2)" FontWeight="Bold" Foreground="#2980b9"/>
                                <TextBlock x:Name="txtP2" Text="Subject..." FontSize="16"/>
                            </StackPanel>
                            <Button x:Name="btnP2" Content="START CLASS" HorizontalAlignment="Right" Width="120" Height="35" Background="Gray" Foreground="White" Click="btnStart_Click" Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                    <Border Background="#ECF0F1" Padding="10" Margin="0,0,0,10" CornerRadius="5">
                        <TextBlock Text="🍱 LUNCH BREAK" HorizontalAlignment="Center" Foreground="Gray"/>
                    </Border>

                    <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="13:10 - 14:40 (Period 3)" FontWeight="Bold" Foreground="#2980b9"/>
                                <TextBlock x:Name="txtP3" Text="Subject..." FontSize="16"/>
                            </StackPanel>
                            <Button x:Name="btnP3" Content="START CLASS" HorizontalAlignment="Right" Width="120" Height="35" Background="Gray" Foreground="White" Click="btnStart_Click" Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>
<Page x:Class="Student_Attendance_System.Views.TimetablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Time Table">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F0F2F5" Offset="0"/>
                <GradientStop Color="#E2E8F0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="1Cクラス 時間割" FontSize="28" FontWeight="ExtraBold" Foreground="#1A202C"/>

            <Border Grid.Row="1" Background="#80FFFFFF" CornerRadius="12" Margin="0,15,0,20" Padding="15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="学期選択: " VerticalAlignment="Center" FontSize="15" FontWeight="Medium"/>
                    <ComboBox x:Name="cboTerm" Width="160" Height="32" SelectionChanged="cboTerm_SelectionChanged">
                        <ComboBoxItem Content="前期 (Former Term)"/>
                        <ComboBoxItem Content="後期 (Latter Term)" IsSelected="True"/>
                    </ComboBox>
                    <TextBlock x:Name="txtTodayInfo" Text="本日: 木曜日" Margin="30,0,0,0" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Foreground="#3182CE"/>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid x:Name="TimetableGrid" Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="120"/>
                        <RowDefinition Height="120"/>
                        <RowDefinition Height="120"/>
                        <RowDefinition Height="120"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="時限" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#4A5568"/>
                    <TextBlock Text="月 (Mon)" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#4A5568"/>
                    <TextBlock Text="火 (Tue)" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#4A5568"/>
                    <TextBlock Text="水 (Wed)" Grid.Column="3" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#4A5568"/>
                    <TextBlock Text="木 (Thu)" Grid.Column="4" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#4A5568"/>
                    <TextBlock Text="金 (Fri)" Grid.Column="5" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#4A5568"/>

                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
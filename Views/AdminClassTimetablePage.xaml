<Page x:Class="Student_Attendance_System.Views.AdminClassTimetablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Admin Class Timetable"
      Background="Transparent">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <Border CornerRadius="20"
                Padding="20"
                Background="#1A000000"
                BorderBrush="#33FFFFFF"
                BorderThickness="1"
                Margin="0,0,0,15">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="CLASS TIMETABLE (ADMIN)"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,25,0"/>

                    <ComboBox x:Name="cboYear" Width="80" Height="36" Margin="0,0,10,0">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                    </ComboBox>

                    <ComboBox x:Name="cboClass" Width="80" Height="36" Margin="0,0,10,0">
                        <ComboBoxItem Content="A"/>
                        <ComboBoxItem Content="B"/>
                        <ComboBoxItem Content="C"/>
                        <ComboBoxItem Content="D"/>
                        <ComboBoxItem Content="E"/>
                    </ComboBox>

                    <ComboBox x:Name="cboTerm" Width="100" Height="36">
                        <ComboBoxItem Content="前期"/>
                        <ComboBoxItem Content="後期"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Load"
                            Width="90"
                            Height="36"
                            Background="#2563EB"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="0,0,10,0"
                            Click="Load_Click"/>

                    <Button Content="Save"
                            Width="90"
                            Height="36"
                            Background="#10B981"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="Save_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ================= TIMETABLE GRID ================= -->
        <Border Grid.Row="1"
                CornerRadius="20"
                Padding="15"
                Background="#0DFFFFFF"
                BorderBrush="#33FFFFFF"
                BorderThickness="1">

            <Grid x:Name="TimetableGrid">

                <!-- Columns -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Rows -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="Period" Grid.Row="0" Grid.Column="0" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Mon" Grid.Row="0" Grid.Column="1" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Tue" Grid.Row="0" Grid.Column="2" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Wed" Grid.Row="0" Grid.Column="3" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Thu" Grid.Row="0" Grid.Column="4" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Fri" Grid.Row="0" Grid.Column="5" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>

                <!-- Period labels with time -->
                <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="1" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="09:10 - 10:40" FontSize="11" Foreground="#94A3B8"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="2" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="10:50 - 12:20" FontSize="11" Foreground="#94A3B8"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="3" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="13:10 - 14:40" FontSize="11" Foreground="#94A3B8"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="4" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="14:50 - 16:20" FontSize="11" Foreground="#94A3B8"/>
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="5" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="16:30 - 18:00" FontSize="11" Foreground="#94A3B8"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Page>
